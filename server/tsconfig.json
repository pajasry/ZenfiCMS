{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "@/utils/*": ["src/utils/*"],
            "@/helpers/*": ["src/helpers/*"],
            "@/decorators/*": ["src/decorators/*"],
            "@/exceptions/*": ["src/exceptions/*"],
            "@/interceptors/*": ["src/interceptors/*"],
            "@/auth/*": ["src/core/auth/*"],
            "@/pages/*": ["src/core/pages/*"],
            "@/posts/*": ["src/core/posts/*"],
            "@/emails/*": ["src/core/emails/*"],
            "@/settings/*": ["src/core/settings/*"],
            "@/publicationStatuses/*": ["src/core/publicationStatuses/*"],
            "@/users/*": ["src/core/users/*"]
        }
    }
}
