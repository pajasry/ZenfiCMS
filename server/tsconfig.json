{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "@/utils": ["src/utils"],
            "@/helpers": ["src/helpers"],
            "@/decorators": ["src/decorators"],
            "@/exceptions": ["src/exceptions"],

            "@/auth/*": ["src/core/auth/*"],
            "@/page/*": ["src/core/page/*"],
            "@/email/*": ["src/core/email/*"],
            "@/user/*": ["src/core/user/*"],
            "@/prisma/*": ["src/core/prisma/*"],
            "@/upload/*": ["src/core/upload/*"]
        }
    }
}
