        "@prisma/client": "4.2.1",
        "@sendgrid/mail": "^7.7.0",
        "apollo-server-express": "^3.10.0",
        "aws-sdk": "^2.1196.0",
        "bcrypt": "^5.0.1",
        "class-transformer": "^0.5.1",
        "dotenv": "^16.0.1",
        "graphql": "^16.5.0",
        "graphql-upload": "^13.0.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.0",
